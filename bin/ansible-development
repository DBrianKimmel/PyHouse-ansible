#!/bin/bash
#
# Name:    PyHouse-ansible/bin/ansible-development
# Author:  D. Brian Kimmel
# Created: 2017-10-18
# Updated: 2018-07-09
#
# Deploys the development setup.
#
# ansible-playbook -i /home/briank/workspace/PyHouse-ansible/inventories/development/hosts /home/briank/workspace/PyHouse-ansible/playbook-development.yaml  --tags=tag_development  --vault-password-file ~/.vault-pass.txt
#

BASE="${HOME}/workspace/PyHouse-ansible"
INVENTORY="-i ${BASE}/inventories/development/hosts"
PLAYBOOK="${BASE}/playbook-development.yaml"
PSWD1="--vault-password-file ~/.vault-pass.txt"
TAGS=""

if [ $# -gt 0 ]; then
    TAGS+=" --tags=tag_development,$1 "
    echo "Tags = ${TAGS} "
else
    TAGS+=" --tags=tag_development "
    echo "No Tags - only setup_development "
fi

echo "ansible-playbook ${INVENTORY} ${PLAYBOOK} ${TAGS} ${PSWD1}"
ansible-playbook  -vv  ${INVENTORY} ${PLAYBOOK} ${PSWD1} ${TAGS}

### END DBK

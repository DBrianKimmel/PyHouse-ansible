<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<title>Cannon Trail Proxy</title>
	<link rel="stylesheet" href="css/style.css">
	<style>
	html, body { background: black; }
	p, h1, h2, h3 {
		margin-top: 1em;
	}
	pre {
		display: inline;
		white-space: pre-line;
		word-wrap: break-word;
	}
	</style>
</head>

<body>
	<div class="lcars-app-container">

		<!-- HEADER ==================================================== -->
		<div id="header" class="lcars-row header">
			<!-- ELBOW -->
			<div class="lcars-elbow left-bottom lcars-tan-bg"></div>
			<!-- BAR WITH TITLE -->
			<div class="lcars-bar horizontal">
				<div class="lcars-title center">Cannon Trail</div>
			</div>
			<!-- ROUNDED EDGE DECORATED -->
			<div class="lcars-bar horizontal right-end decorated"></div>
		</div>

		<!-- SIDE MENU ================================================= -->
		<div id="left-menu" class="lcars-column start-space lcars-u-1">
			<!-- FILLER -->
			<div class="lcars-bar lcars-u-1"></div>
		</div>

		<!-- FOOTER ==================================================== -->
		<div id="footer" class="lcars-row ">
			<!-- ELBOW -->
			<div class="lcars-elbow left-top lcars-tan-bg"></div>
			<!-- BAR -->
			<div class="lcars-bar horizontal both-divider bottom"></div>
			<!-- ROUNDED EDGE -->
			<div class="lcars-bar horizontal right-end left-divider bottom"></div>
		</div>

		<!-- MAIN CONTAINER -->
		<div id="container">

			<!-- COLUMN LAYOUT -->
			<div class="lcars-column lcars-u-5">
				<!-- LAYOUT -->
				<div>

					<!-- Node-Red -->
					<div class="lcars-row">
						<div class="lcars-bracket left">
							<div class="lcars-element centered rounded lcars-u-2-1">
								Node-Red
							</div>
						</div>
					</div>
					<div class="lcars-row">
						<li>Node red</li>
							<a href="/nodered/">Irrigation/Pond</a> (pi-04-ct)
					</div>


					<!-- Pi-Hole -->
					<div class="lcars-row">
						<div class="lcars-element centered rounded lcars-u-2-1">
							Pi-Hole
						</div>
					</div>

					<!-- homeassistant -->
					<div class="lcars-row">
						Home Assistant
							<a href="/homeassistant">Home Assistant</a> (pi-03-ct)
					</div>

					<div class="lcars-row">
						<div class="lcars-bracket left">
							<div class="lcars-element centered rounded lcars-u-2-1">
								Node-Red
							</div>
						</div>
					</div>
					<div class="lcars-row">
						<li>Node red</li>
							<a href="/nodered/">Irrigation/Pond</a> (pi-04-ct)
					</div>



					<!-- mopidy -->
						<li>Mopidy</li>
							<a href="/mopidy">Mopidy Music player</a> (pi-06-ct)
					<!-- octoprint -->
						<li>Octoprint</li> class="lcars-row"
							<a href="/octoprint/"> Octoprint </a> (pi-08-ct)
					<!-- cameras -->
						<li>Cameras</li>
						<li>Sonoff</li>
							<a href="/sonoff/1/"> Garage Workbench</a> (sonoff-01-ct)
							<br>
							<a href="/sonoff/2/"> Brian's Couch Light</a> (sonoff-02-ct)


					<!-- Sonoff -->
					<div class="lcars-row">
						<div class="lcars-bracket left">
						</div>
						<div class="lcars-column">
							<div class="lcars-element button">
								Garage Workbench
							</div>
							<div class="lcars-element">
								Brian's Couch Light
							</div>
						</div>
						<div class="lcars-column">
							<div class="lcars-element">
								<a href="/sonoff/1/">(sonoff-01-ct)</a>
							</div>
							<div class="lcars-element">
								<a href="/sonoff/2/">(sonoff-02-ct)</a>
							</div>
						</div>
						<div class="lcars-bracket right">
						</div>
					</div>

					<!-- Services -->
					{% for l_service in house_proxy_services %}
						<div class="lcar-row full-centered">
							<div class="lcars-element lcars-u-2 rounded button">
								<div>{{ l_service }}</div>
							</div>
						</div>
					{% endfor %}

				</div>
			</div>
		</div>

	</div>

<!-- end -->

</body>
</html>
